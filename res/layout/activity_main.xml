<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.viewpage.NoScrollViewPager
        android:id="@+id/noScrollViewPager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </com.example.viewpage.NoScrollViewPager>
    <!-- 状态显示区 -->

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C9D7F2"
        android:orientation="horizontal"
        android:padding="3dp" >

        <RadioButton
   
            android:id="@+id/radio_home"
            style="@style/Pub_TabStyle"
            android:drawableTop="@drawable/btn_home_style"
            android:text="市场" />

        <RadioButton
            android:id="@+id/radio_h1"
            style="@style/Pub_TabStyle"
            android:drawableTop="@drawable/btn_classify_style"
            android:text="分类" />

        <RadioButton
            android:id="@+id/radio_h2"
            style="@style/Pub_TabStyle"
            android:drawableTop="@drawable/btn_issue_style"
            android:text="发布" />

        <RadioButton
            android:id="@+id/radio_h3"
            style="@style/Pub_TabStyle"
            android:drawableTop="@drawable/btn_person_style"
            android:text="我的" />
    </RadioGroup>

</LinearLayout>